<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181818"
    tools:context=".features.successScreen.SuccessScreenFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewMessageSuccess"
        android:layout_width="@dimen/none"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimenOf80dp"
        android:fontFamily="@font/roboto_black"
        android:gravity="center"
        android:text="Compra efetuada\ncom sucesso!"
        android:textColor="@color/white"
        android:textSize="@dimen/dimenOf24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/circleSuccess"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/circle_green"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dimenOf56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewMessageSuccess" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/none"
        android:layout_height="@dimen/none"
        app:srcCompat="@drawable/ic_check"
        app:tint="#282C30"
        android:padding="@dimen/dimenOf46dp"
        app:layout_constraintTop_toTopOf="@id/circleSuccess"
        app:layout_constraintStart_toStartOf="@id/circleSuccess"
        app:layout_constraintEnd_toEndOf="@id/circleSuccess"
        app:layout_constraintBottom_toBottomOf="@id/circleSuccess"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonBack"
        android:layout_width="@dimen/none"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimenOf56dp"
        android:layout_marginTop="@dimen/dimenOf56dp"
        android:background="@drawable/shape_button_corners"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/text_button_back"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/circleSuccess"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>